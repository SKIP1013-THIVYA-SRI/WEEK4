package assignment;
import java.util.Scanner;

public class Assignment1A {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		float interestRate;
		int years;
		float loanAmount;
		float monthlyPay;
		float totalPay;
		
		Scanner scan = new Scanner (System.in);
	    System.out.print ("Enter the yearly interest rate, for example, 3.5 : ");
	    interestRate = scan.nextFloat();
	    
	    System.out.print ("Enter the number of years as integer, for example, 5 : ");
	    years = scan.nextInt();
	    
	    System.out.print ("Enter the loan amount, for example, 3000.00 : ");
	    loanAmount = scan.nextFloat();
	    
	    monthlyPay = (interestRate / 100) * loanAmount;
	    totalPay = monthlyPay * 12 * years;
	    
	    System.out.println("The monthly payment is $" + monthlyPay);
	    System.out.println("The total payment is $" + totalPay);
	    
		

	}

}
